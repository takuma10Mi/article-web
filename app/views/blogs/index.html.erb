<ul class="list_article">
  <% @article.each do |article| %>
  <li>
    <h2><%= article.title %></h2>
    <% if article.image != "" %>
      <p><img src="<%= article.image %>"></p>
    <% end %>
    <p><%= article.content %></p>
    <p><%= article.created_at %></p>
    <p><%= link_to '詳細', blog_path(article.id),method: :get%></p>
  </li>
  <% end %>
</ul>
